    Serial.println(F("La asignación de SSD1306 falló"));
    for(;;); // No continuar, bucle infinito
  }

  // Limpiar el buffer
  display.clearDisplay();

  // Dibujar la imagen
  display.drawBitmap(0, 0, epd_bitmap_1, 128, 64, SSD1306_WHITE);
  display.display();
}

